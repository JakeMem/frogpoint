server {
    listen 80;

{% for domain in http.domains %}
    server_name {{ domain }};
{% endfor %}

    client_max_body_size 10m;

    gzip on;
    gzip_http_version 1.0;
    gzip_proxied any;
    gzip_min_length 500;
    gzip_types text/plain text/xml text/css text/comma-separated-values
               text/javascript application/x-javascript application/atom+xml;

    add_header 'Cache-Control' 'private, max-age=0, no-cache';

    location ~ ^/static/(.*)$ {
        autoindex on;
        expires max;
        alias /srv/webapp/forgpoint.app/static/$1;
    }

    location / {
        try_files $uri @frogpoint;
    }

    location @frogpoint {
        include uwsgi_params;

        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Host $http_host;
        proxy_hide_header Cache-Control;
        proxy_redirect off;
        proxy_intercept_errors on;

        uwsgi_param UWSGI_SCHEME $scheme;
        uwsgi_pass unix:/run/uwsgi/app/frogpoint/socket;
    }
}

